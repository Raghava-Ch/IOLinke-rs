      "fields": [
        {
          "id": "vendorId",
          "label": "Vendor ID",
          "type": "integer",
          "required": true,
          "minInclusive": 1,
          "maxInclusive": 65535
        },
        {
          "id": "deviceId",
          "label": "Device ID",
          "type": "integer",
          "required": true,
          "minInclusive": 1,
          "maxInclusive": 4294967295
        },
        {
          "id": "deviceName",
          "label": "Device Name",
          "type": "string",
          "required": true,
          "maxLength": 120
        },
        {
          "id": "deviceFamily",
          "label": "Device Family",

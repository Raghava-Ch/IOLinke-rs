        {
          "id": "datatypeId",
          "label": "Datatype ID",
          "type": "string",
          "required": true,
          "pattern": "[A-Za-z_][A-Za-z0-9_]*"
        },
        {
          "id": "baseType",
          "label": "Base Type",
          "type": "enum",
          "required": true,
          "options": [
            { "value": "Boolean" },
            { "value": "Integer" },
            { "value": "String" }
          ]
        },
        {
          "id": "constraints",
          "label": "Constraints",
          "type": "object",
          "sections": [
            {
              "id": "booleanOptions",
              "label": "Boolean",
              "type": "object",
              "visibility": { "field": "baseType", "equals": "Boolean" },
              "fields": [
                {
                  "id": "trueTextRef",
                  "label": "True Text",
                  "type": "reference",
                  "reference": { "entityId": "ExternalText", "displayField": "textId" }
                },
                {
                  "id": "falseTextRef",
                  "label": "False Text",
                  "type": "reference",
                  "reference": { "entityId": "ExternalText", "displayField": "textId" }
                }
              ]
            },
            {
              "id": "integerOptions",
              "label": "Integer",
              "type": "object",
              "visibility": { "field": "baseType", "equals": "Integer" },
              "fields": [
                { "id": "min", "label": "Minimum", "type": "integer", "minInclusive": -32768, "maxInclusive": 32767 },
                { "id": "max", "label": "Maximum", "type": "integer", "minInclusive": -32768, "maxInclusive": 32767 },
                { "id": "unitTextRef", "label": "Unit Text", "type": "reference", "reference": { "entityId": "ExternalText", "displayField": "textId" } }
              ]
            },
            {
              "id": "stringOptions",
